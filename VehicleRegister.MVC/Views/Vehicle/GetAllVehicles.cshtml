@model IEnumerable<VehicleRegister.MVC.Models.VehicleModel>

<p>
    @Html.ActionLink("Search by registrationnumber", "GetVehicleById")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.VehicleId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegistrationNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Brand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VehicleType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.YearlyFee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstUseInTraffic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsRegistered)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.VehicleId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegistrationNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Brand)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VehicleType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Weight)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YearlyFee)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstUseInTraffic)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsRegistered)
        </td>
        <td>
            @Html.ActionLink("Edit", "UpdateVehicle", new{
                                           item.VehicleId,
                                           item.RegistrationNumber,
                                           item.Model,
                                           item.Brand,
                                           item.VehicleType,
                                           item.Weight,
                                           item.YearlyFee,
                                           item.FirstUseInTraffic,
                                           item.IsRegistered}) |
           
            @Html.ActionLink("Details", "GetVehicleById", new { item.VehicleId })|

            @Html.ActionLink("Delete", "DeleteVehicle", new { item.VehicleId, item.RegistrationNumber })
        </td>
    </tr>
}

</table>
